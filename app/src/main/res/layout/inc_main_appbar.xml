<android.support.design.widget.AppBarLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Widget.App.AppBarLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/AppTheme.Dark.AppBarOverlay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:layout_scrollFlags="scroll|enterAlways" />

    <android.support.design.widget.SlidingTabStripLayout
        android:id="@+id/slidingTabStrips"
        style="@style/Widget.App.SlidingTabStripLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/apptheme_accent_orange" />

</android.support.design.widget.AppBarLayout>