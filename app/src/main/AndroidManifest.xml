<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rowland.hashtrace"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="20" />
    <!-- Permissions required for HashTrace to petrform network acess -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!-- Permissions required by the sync adapter -->
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/CustomTheme" >
        <activity
            android:name="com.rowland.hashtrace.HashTraceActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="@string/title_activity_settings"
            android:name="com.rowland.hashtrace.SettingsActivity"
            android:parentActivityName="com.rowland.hashtrace.HashTraceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rowland.hashtrace.HashTraceActivity" />
        </activity>
         <activity
            android:label="@string/title_activity_details"
            android:name="com.rowland.hashtrace.DetailActivity"
            android:parentActivityName="com.rowland.hashtrace.HashTraceActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.rowland.hashtrace.HashTraceActivity" />
        </activity>

        <provider
            android:name="com.rowland.data.TweetHashTracerContentProvider"
            android:authorities="@string/content_authority"
            android:exported="false"
            android:syncable="true" />
        <!-- SyncAdapter's dummy authentication service -->
        <service android:name="com.rowland.sync.TweetHashTracerAuthenticatorService" >
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <!-- The SyncAdapter service -->
        <service
            android:name="com.rowland.sync.TweetHashTracerSyncService"
            android:exported="true" >
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
    </application>

</manifest>